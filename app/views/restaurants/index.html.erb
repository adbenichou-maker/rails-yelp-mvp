<div class="container">
  <h1 class="mb-4 text-4xl font-bold tracking-tight text-heading md:text-5xl lg:text-6xl">All our <span class="text-fg-brand">restaurants</span>:</h1>
  <p><%= link_to '+ Add a new restaurant', new_restaurant_path  %></p>
  <br>
    <% @restaurants.each do |restaurant| %>
      <a href="/restaurants/<%= restaurant.id %>" class="bg-neutral-primary-soft block max-w-sm p-6 border border-default rounded-base shadow-xs hover:bg-neutral-secondary-medium">
        <h5 class="mb-3 text-2xl font-semibold tracking-tight text-heading leading-8">  <%= restaurant.name %></h5>
        <p class="text-body"><%= restaurant.address %></p>
      </a>
    <% end %>
</div>
